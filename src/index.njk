---
layout: default
pagination:
  data: collections.pagedPosts
  size: 1
  alias: paged
permalink: "{% if paged.number > 1 %}page/{{ paged.number }}/{% endif %}index.html"
---

{% if author.resume %}
<div class="md:mt-7 mb-10 bg-gray-200_">
  <p
    class="text-4xl bg-gray-800 text-white p-2 max-w-4xl bg-gradient-to-r from-purple-400 via-pink-500 to-red-500"
  >
    {# Sitio personal y portafolio de <a href="./">Jairo Lachira</a> #}
    Jairo Lachira's personal website, portfolio and blog 
  </p>
  <p class="mt-3 text-2xl py-2">
    {{ author.resume }}
  </p>
</div>
{% endif %}

<!-- Skills -->
<div class="mt-12 mb-4">
  <h3
    class="font-extrabold text-xl underline"
    style="text-underline-offset: 5px"
  >
    ðŸ§  Skills:
  </h3>
</div>

<div class="flex justify-start flex-wrap">
  {% for skill in author.skills %}
  <span
    class="inline-block mx-1 mb-3 px-4 py-2 bg-gray-200 text-gray-700 font-medium rounded-full shadow-md hover:shadow-lg"
  >
    {{ skill }}
  </span>
  {% endfor %}
</div>
<!-- Skills -->

{# Posts #}
<div class="mt-12 mb-3">
  <h3
    class="font-extrabold text-xl underline"
    style="text-underline-offset: 5px"
  >
    ðŸ“‘ Posts:
  </h3>
</div>


<div class="flex flex-wrap -mx-2">{% include "partials/post-grid.njk" %}</div>

{% if collections.posts.length > site.paginate %} {% include
"partials/paginator.njk" %} {% endif %}
{# End Posts #}


{# Grid proyects #}
<div class="mt-12 mb-3">
  <h3
    class="font-extrabold text-xl underline"
    style="text-underline-offset: 5px"
  >
    ðŸŽ‰ Featured Projects:
  </h3>
</div>


<div class="flex flex-wrap -mx-2">
  {% for project in author.projects %}
    <div class="w-full sm:w-1/2 md:w-1/3 self-stretch p-2 mb-2">
    <div class="rounded shadow-md h-full">
      <a href="{{project.main_link}}" target="_blank">
      <img
        src="/assets/img/{{project.thumb}}"
        width="960"
        height="500"
        alt="This post thumbnail"
      />
      </a>
      <div class="px-6 py-5">
        <div class="font-semibold text-lg mb-2">
          <a
            class="text-gray-900 hover:text-gray-700"
            href="{{project.main_link}}"
            target="_blank"
            >{{ project.title }}</a
          >
        </div>
        <p class="text-gray-700 mb-1" title="Published date">
          {{ project.date }}
        </p>
        <p class="text-gray-800">
          {{ project.description }}
        </p>
        <div class="mt-2">
          {% if project.github %}
            <a href="{{project.github}}" class="underline text-blue-800	mr-2" target="_blank">Github</a>
          {% endif %}
          {% if project.postman %}
            <a href="{{project.postman}}" class="underline text-blue-800 mr-2" target="_blank">Postman</a>
          {% endif %}
        </div>
      </div>
    </div>
    </div>
  {% endfor %}
</div>
{# End Grid proyects #}


